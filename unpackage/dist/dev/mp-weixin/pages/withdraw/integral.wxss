.box {
  margin: 40rpx 24rpx;
  width: 702rpx;
  height: 696rpx;
  background: #F4F4F4;
  border-radius: 8rpx;
  overflow: hidden;
}
.box_t {
  margin-top: 32rpx;
  margin-left: 20rpx;
  height: 50rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FF4454;
  line-height: 50rpx;
  overflow: hidden;
}
.box_t text {
  margin-right: 8rpx;
  font-size: 24rpx;
  color: #666666;
}
.box_text {
  margin-top: 32rpx;
  margin-left: 20rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
