<view><view class="swiperbox"><swiper class="swiper" autoplay="{{true}}" interval="3000" duration="500" circular="{{true}}"><block wx:for="{{list.images}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><swiper-item><image class="swiper_img" src="{{item}}"></image></swiper-item></block></block></swiper></view><view class="pricebox"><view class="pricebox_now">{{list.price}}</view><view class="pricebox_origin">{{list.marketprice}}</view><view class="pricebox_count">{{list.sales+"人购买"}}</view></view><view class="name">{{list.title}}</view><view class="border"></view><view class="detail"><rich-text nodes="{{rich}}"></rich-text></view><view class="footer"><view data-event-opts="{{[['tap',[['showPopup',[2]]]]]}}" class="footer_button" bindtap="__e">免费领取</view></view><block wx:if="{{popup}}"><view data-event-opts="{{[['tap',[['hidePopup',['$event']]]]]}}" class="popup_bg" bindtap="__e"></view></block><block wx:if="{{popup}}"><view class="popup"><image class="popup_img" src="/static/goodsDetail_detele.png" data-event-opts="{{[['tap',[['hidePopup',['$event']]]]]}}" bindtap="__e"></image><view class="popup_title">免费领取</view><view class="popup_num">领取数量<text>500颗</text></view><view class="popup_siteTitle">收货地址</view><view data-event-opts="{{[['tap',[['selectAddress',['$event']]]]]}}" class="popup_site" bindtap="__e"><image class="popup_site_img" src="/static/site.png"></image><block wx:if="{{address.receiver||address.mobile}}"><view class="popup_site_box"><view class="popup_site_box_t">{{address.receiver+''}}<text>{{address.mobile}}</text></view><view class="popup_site_box_f">{{address.address}}</view></view></block><block wx:else><view class="popup_site_no">请选择收货地址></view></block></view><block wx:if="{{showConfirm}}"><view data-event-opts="{{[['tap',[['clickConfirm',['$event']]]]]}}" class="popup_confirm" bindtap="__e">确定领取</view></block><block wx:else><view class="popup_confirm">确定领取</view></block></view></block></view>